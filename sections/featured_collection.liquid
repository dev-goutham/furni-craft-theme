{% if section.settings.featured_collection == null %}
  {% assign featured_collection = collections.frontpage %}
{% else %}
  {% assign featured_collection = section.settings.featured_collection %}
{% endif %}

<section class='container featured_collection'>
  <div class='details'>
    <h2>
      {{ featured_collection.title }}
    </h2>
    <p>
      {{ featured_collection.description }}
    </p>
  </div>
  <div class='product-grid'>
    {% for item in featured_collection.products limit: 2 %}
      {% render 'product-card', product: item %}
    {% endfor %}
  </div>
  <div>
    <button>
      <a href='{{featured_collection.url}}'> Shop Now </a>
    </button>
  </div>
</section>



{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "collection",
      "id": "featured_collection",
      "label": "Featured collection"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
